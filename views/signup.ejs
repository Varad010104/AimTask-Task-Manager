<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup - AimTask</title>
  <link href="../stylesheets/output.css" rel="stylesheet">
  <script src="https://unpkg.com/feather-icons"></script>
</head>

<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-black p-4">

  <!-- Success Modal -->
  <div id="successModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50">
    <div class="flex items-center justify-center min-h-screen">
      <div id="successContent"
        class="bg-white p-6 rounded-xl shadow-lg text-center max-w-sm w-full transform scale-90 opacity-0 transition-all duration-300">
        <h2 class="text-2xl font-bold text-green-600">ðŸŽ‰ Signup Successful! ðŸŽ‰</h2>
        <p class="mt-2 text-gray-600">Redirecting to login page...</p>
      </div>
    </div>
  </div>

  <!-- Signup Card -->
  <div
    class="w-full max-w-md bg-white/10 backdrop-blur-lg rounded-2xl shadow-lg p-8 border border-gray-700 animate-fade-in">


    <div class="flex justify-center mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
        class="w-8 h-8 text-indigo-400">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z" />
      </svg>
    </div>

    <h1 class="text-2xl font-bold text-center text-white mb-6">
      Signup to <span class="text-indigo-400">AimTask</span>
    </h1>

    <!-- Signup Form -->
    <form action="/auth/signup" method="POST" class="space-y-5" id="signupForm">

      <!-- Name -->
      <div class="relative">
        <i data-feather="user" class="absolute left-3 top-3 text-gray-400"></i>
        <input id="name" name="name" type="text" placeholder="Your Name" required
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
      </div>

      <!-- Email -->
      <div class="relative">
        <i data-feather="mail" class="absolute left-3 top-3 text-gray-400"></i>
        <input id="email" name="email" type="email" placeholder="Email Address" required
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
      </div>

      <!-- Password -->
      <div class="relative">
        <i data-feather="lock" class="absolute left-3 top-3 text-gray-400"></i>
        <input id="password" name="password" type="password" placeholder="Password" required
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
      </div>

      <!-- Confirm Password -->
      <div class="relative">
        <i data-feather="check-circle" class="absolute left-3 top-3 text-gray-400"></i>
        <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm Password" required
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-medium py-2 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition duration-200">
        Sign Up
      </button>
    </form>


    <p class="text-center text-gray-400 mt-5 text-sm">
      Already have an account?
      <a href="/auth/login" class="text-indigo-400 hover:underline">Login</a>
    </p>

    <p class="text-center text-red-700 font-bold mt-4 text-sm hidden" id="errorMsg">
    </p>
  </div>


  <script>
    feather.replace();
  </script>
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
  <script src="../javascripts/signUp_Validate.js"></script>

</body>

</html>